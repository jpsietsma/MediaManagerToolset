@using Microsoft.AspNetCore.Identity

@model IEnumerable<IdentityRole>

    <div id="content">
        <h1 class="bg-info text-white">All Roles</h1>
        <a asp-action="Create" class="btn btn-secondary">Create a Role</a>

        <table class="table table-sm table-bordered table-bordered">
            <tr><th>ID</th><th>Name</th><th>Users</th><th>Update</th><th>Delete</th></tr>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td i-role="@role.Id"></td>
                    <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-controller="Role" asp-route-id="@role.Id">Update Users</a></td>
                    <td>
                        <form asp-action="Delete" asp-controller="Role" asp-route-id="@role.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </table>
    </div>

