@page
@model LoginModel

@{
    ViewData["Title"] = "Please Log in";
    Layout = null;
}
<link href="~/css/styles.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/js/all.min.js" crossorigin="anonymous"></script>

<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header"><h3 class="text-center font-weight-light my-4">Please Login to Continue...</h3></div>
                            <div class="card-body">
                                <form id="account" method="post">
                                    <div class="form-group">
                                        <label class="small mb-1" asp-for="Input.Email"></label>
                                        <input asp-for="Input.Email" class="form-control py-4" id="inputEmailAddress" type="email" placeholder="Enter email address" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label class="small mb-1" asp-for="Input.Password"></label>
                                        <input asp-for="Input.Password" id="inputPassword" type="password" placeholder="Enter password" class="form-control py-4" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <div class="custom-control checkbox">
                                            <label class="custom-control-label" asp-for="Input.RememberMe">
                                                <input class="custom-control-input" asp-for="Input.RememberMe" />
                                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                        <a class="small" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                        <button type="submit" class="btn btn-primary">Log in</button>
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer text-center">
                                <div class="small">
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Need an Account? Request one!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>

    <partial name="_ValidationScriptsPartial" />
}
